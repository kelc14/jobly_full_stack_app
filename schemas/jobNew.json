{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://our.job.com/jobNew.schema.json",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 30
    },

    "salary": {
      "type": "number",
      "minimum": 0
    },

    "equity": {
      "type": "number",
      "minimum": 0,
      "maximum": 1.0
    },

    "company_handle": {
      "type": "string",
      "minLength": 1,
      "maxLength": 10
    }
  },
  "additionalProperties": false,
  "required": ["title", "salary", "equity", "company_handle"]
}
